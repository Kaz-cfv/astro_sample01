---
interface Props {
	title: string;
	href: string;
	thumb: string;
	category: string;
	createdAt: string;
	updatedAt: string;
}

const { href, title, thumb, category, createdAt, updatedAt } = Astro.props;
---

<li class="newsCard">
	<a href={href}>
		<figure class="newsCard__thumb"><img src={thumb} alt=""></figure>
		<h3 class="newsCard__cap">{title}</h3>
		<span class="newsCard__date">更新日：{updatedAt}</span>
		<span class="newsCard__date">作成日：{createdAt}</span>
		<span class="newsCard__cat">#{category}</span>
	</a>
</li>

<style lang="scss">
	.newsCard {
		width: 32%;
		margin-top: 20px;
		margin-right: 2%;

		&:first-child,
		&:nth-child(2),
		&:nth-child(3) {
			margin-top: 0;
		}
		&:nth-child(3n) {
			margin-right: 0;
		}

		a {
			display: block;
			padding: 20px;
			box-shadow: 4px 4px 8px rgba(#000, .25);

			&:hover {
				.newsCard__thumb {
					&::before {
						opacity: 1;
					}

					img {
						transform: translate(-50%, -50%) scale(1.2);
					}
				}
			}
		}

		&__thumb {
			overflow: hidden;
			position: relative;
			height: 180px;

			&::before {
				opacity: 0;
				position: absolute;
				top: 0;
				left: 0;
				z-index: 2;
				width: 100%;
				height: 100%;
				background-color: rgba(#000, .5);
				content: "";
				transition: all .3s ease;
			}

			img {
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				z-index: 1;
				height: 100%;
				transition: all .3s ease;
			}

		}

		&__cap {
			margin-top: 10px;
			font-size: 24px;
		}

		&__date {
			display: block;
			font-size: 14px;
		}

		&__cat {
			display: block;
			margin-top: 5px;
			font-size: 12px;
		}

	}
</style>
